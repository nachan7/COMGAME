<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2 class="mt-5"><i class="fas fa-pen-square mr-2"></i>カテゴリー編集</h2>
       <%= render 'layouts/error',obj: @category %>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-6 mx-auto">
      <%= form_with model: @category,url:admin_category_path, method: :patch do |f| %>
      <table class="table　table-borderless">
        <thead>
          <tr>
            <th style="width:80%"><%= f.text_field:name,  class:"form-control"%></th>
           <th><%= f.submit "変更を保存",class:"btn btn-success" %></th>
          </tr>
        </thead>
      </table>
      <% end %>
    </div>
  </div>
</div>