<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h1 class="m-5"><h1>カテゴリー編集</h1></h1>
    </div>
  </div>
  <div class="row mt-5">
    <div class="col-6 mx-auto">
      <table class="table　table-borderless">
        <%= form_with model: @category,url:admin_category_path, method: :patch do |f| %>
        <thead>
          <tr>
            <th style="width:80%"><%= f.text_field:name,  class:"form-control"%></th>
           <th><%= f.submit "変更を保存",class:"btn btn-success" %></th>
          </tr>
        </thead>
        <% end %>
      </table>
    </div>
  </div>
</div>