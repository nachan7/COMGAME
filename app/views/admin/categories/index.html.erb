<div class="container">
  <div class="row my-5">
    <div class="col-6 mx-auto">
      <h1>カテゴリー一覧・追加</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
     <table class="table　table-borderless">
      <%= form_with model: @category,url:admin_categories_path, method: :post do |f| %>
       <thead>
         <tr>
           <th style="width:80%"><%= f.text_field:name,  class:"form-control"%></th>
           <th><%= f.submit "新規登録",class:"btn btn-success" %></th>
         </tr>
       </thead>
     </table>
     <% end %>
    </div>
  </div>
  <div class="row my-5">
    <div class="col-6 mx-auto">
      <table class="table ">
        <thead>
          <tr>
            <th>カテゴリー</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @categories.each do |category| %>
        <tbody>
          <tr>
            <td><%= category.name %></td>
            <td><%= link_to "編集", edit_admin_category_path(category.id),class:"btn btn-success" %></td>

            <td><%= link_to "削除", admin_category_path(category.id), method: :delete,class:"btn btn-danger","data-confirm" => "本当に削除しますか？" %></td>
          </tr>
         </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>

