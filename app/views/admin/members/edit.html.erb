<div class="container">
  <div class="row mt-5 mb-3">
    <div class="col-6 mx-auto">
      <h4>会員さんの会員情報編集</h4>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <table class="table table-borderless">
        <thead>
          <tr>
            <th>ユーザー名</th>
            <td><%= @member.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @member.email %></td>
          </tr>
          <%= form_with model: @member do |f| %>
          <tr>
            <th>会員ステータ</th>
            <td></td>
          </tr>
        </thead>
      </table>
      <%= f.submit '変更を保存',class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>














