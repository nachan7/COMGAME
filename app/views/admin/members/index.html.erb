<div class="container my-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1>ユーザー一覧</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <table class="table text-center">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>会員ステータス</th>
          </tr>
        </thead>
        <% @members.each do |member| %>
        <tbody>
          <tr>
            <td><%= member.id %></td>
            <td><%= link_to member.name, admin_member_path(member.id) %></td>
            <td><%= member.email %></td>
            <% if member.is_deleted == false %>
              <td><strong><p class="text-success">有効</p></strong></td>
            <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>