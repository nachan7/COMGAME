<div class="container my-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2>ユーザー一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mt-3 mx-auto">
      <table class="table text-center">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>投稿数</th>
          </tr>
        </thead>
         <% @members.each do |member| %>
        <tbody>
          <tr>
            <td><%= member.id %></td>
            <td><%= link_to member.name, admin_member_path(member.id) %></td>
            <td><%= member.email %></td>
            <td><%= member.posts.count %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>