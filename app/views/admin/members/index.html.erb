<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1><i class="fas fa-users mr-2"></i>ユーザー一覧</h1>
    </div>
  </div>
  <!--検索フォーム-->
  <div class="row mt-3">
    <div class="col-10 mx-auto">
      <%= form_with url: search_admin_members_path, local: true, method: :get  do |f| %>
      <div class="mb-3 row">
        <label class="col-sm-2 text-center mt-2 p-0 m-0">キーワード検索</label>
         <div class="col-6 ">
           <%= f.text_field :keyword, class: "form-control" %>
         </div>
         <div class="col-sm-2">
           <button class="btn btn-outline-secondary" type="submit">検索</button>
         </div>
      </div>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mt-3 mx-auto">
      <%= render 'admin/members/index', members: @members %>
    </div>
  </div>
</div>