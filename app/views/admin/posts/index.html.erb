<%= flash[:notice] %>
<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1><i class="fas fa-list-alt mr-2"></i>投稿一覧</h1>
    </div>
  </div>
  <!--検索フォーム-->
  <%= form_with url: search_admin_posts_path, method: :get do |f| %>
    <div class="row">
      <div class="col-10  mt-3 mx-auto">
        <div class="mb-3 row ">
          <label class="col-sm-2 text-center mt-2 p-0 m-0">カテゴリー</label>
          <div class="col-6 ">
            <%= f.collection_select :category_id, Category.all, :id, :name,{include_blank:'選択して下さい'}, class: "form-control" %>
          </div>
        </div>
      </div>
      <div class="col-10 mx-auto">
        <div class="mb-3 row">
          <div class="col-sm-7">
            <%= f.text_field :keyword, class: "form-control" %>
          </div>
          <div class="col-sm-2">
            <%= f.submit "検索", class: "btn btn-outline-secondary form-control" %>
          </div>
        </div>
      </div>
    </div>
  　<% end %>

  <div class="row">
    <div class="col-10 mx-auto">
      <%= render 'admin/posts/index', posts: @posts %>
    </div>
  </div>
</div>