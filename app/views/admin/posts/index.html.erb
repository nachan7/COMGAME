<div class="container my-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1><i class="fas fa-list-alt mr-2"></i>投稿一覧</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mt-3 mx-auto">
      <table class="table text-center">
        <thead>
          <tr>
            <th>投稿ID</th>
            <th>ユーザー名</th>
            <th>投稿タイトル</th>
            <th>いいね数</th>
            <th>コメント数</th>
          </tr>
        </thead>
        <% @posts.each do |post| %>
        <tbody>
          <tr>
          </td>
            <td><%= post.id %></td>
            <td><%= link_to post.member.name, admin_member_path(post.member.id) %></td>
            <td><%= link_to post.title, admin_post_path(post.id) %></td>
            <td><%= post.favorites.count %></td>
            <td><%= post.post_comments.count %></td>
          </tr>
        </tbody>
        <% end %>
      </table>
      <div class="d-flex justify-content-center mt-5">
        <%= paginate @posts %>
      </div>
    </div>
  </div>
</div>