<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1>投稿詳細</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mx-auto">
      <table class="table mt-2 mb-3">
        <tbody>
          <tr>
            <th style="width:20%">名前</th>
            <td>
              <%= link_to admin_member_path(@post.member) do %>
                <%= @post.member.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th style="width:20%">タイトル</th>
            <td><%= @post.title %></td>
          </tr>
          <tr>
            <th>カテゴリー</th>
            <td><%= @post.category.name %></td>
          </tr>
          <tr>
            <th>投稿内容</th>
            <td><%= @post.body %></td>
          </tr>
          <tr>
            <td>♥<%= @post.favorites.count %> 気になる</td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
    <!--いいね機能-->
    <div class="col-10 mx-auto">
      <%= link_to "削除", @post.member,class:"btn btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
    </div>
    <!--コメント-->
    <div class="col-10 mt-3 mx-auto">
      <h4>コメント一覧</h4>
      <p>コメント件数：<%= @post.post_comments.count %></p>
      <% @post.post_comments.each do |post_comment| %>
        <div class="card mb-3">
          <div class="row">
            <div class="col-3">
              <p>画像入れる</p>
            </div>
            <div class="col-9">
              <div class="card-body">
                <p class="card-text"><%= post_comment.member.name %></p>
                <p class="card-text"><small><%= post_comment.comment %></small></p>
                <p class="card-text text-right">
                  <small class="text-muted"><%= post_comment.created_at.strftime('%Y/%m/%d') %></small>
                  <%= link_to "削除",post_post_comment_path(post_comment.post.member, post_comment),class:"btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
                </p>
              </div>
            </div>
          </div>
        </div>
     <% end %>
    </div>
</div>