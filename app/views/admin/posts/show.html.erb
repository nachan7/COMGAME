<div class="container my-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2><i class="fas fa-sticky-note mr-2"></i>投稿詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table mt-2 mb-3">
        <tbody>
          <tr>
            <th style="width:18%">名前</th>
            <td>
              <%= link_to admin_member_path(@post.member) do %>
                <%= @post.member.name %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th>タイトル</th>
            <td><%= @post.title %></td>
          </tr>
          <tr>
            <th>カテゴリー</th>
            <td><%= @post.category.name %></td>
          </tr>
          <tr>
            <th>投稿内容</th>
            <td><%= @post.body %></td>
          </tr>
          <tr>
            <th>score</th>
            <td><%= @post.score %></td>
          </tr>
　　　　　<tr>
            <td><i class="fas fa-heart mr-1" style="color: #f61e1e;"></i><%= @post.favorites.count %> 気になる</td>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-10 mx-auto">
    <%= link_to "削除", admin_post_path(@post),class:"btn btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
  </div>
  <%= render 'admin/post_comments/post_comment', post: @post, post_comment: @post_comment %>


</div>