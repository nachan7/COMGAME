<div class="row mt-3">
  <div class="col-10 mx-auto">
    <h4>コメント一覧</h4>
    <%# byebug %>
    <p>コメント件数：<%= post.post_comments.count %></p>
    <% post.post_comments.each do |post_comment| %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-3">
          <%= image_tag post_comment.member.get_profile_image(100,100),class:"m-3 rounded-circle" %>
        </div>
        <div class="col-9">
          <div class="card-body">
            <p class="card-text"><%= post_comment.member.name %></p>
            <p class="card-text"><small><%= post_comment.comment %></small></p>
            <p class="card-text text-right">
              <small class="text-muted"><%= post_comment.created_at.strftime('%Y/%m/%d') %></small>
              <%= link_to "削除", admin_post_post_comment_path(post_comment.post, post_comment),class:"btn btn-sm btn-danger", method: :delete, remote: true %>
            </p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>


