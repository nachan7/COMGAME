<div class="container">
  <div class="row">
    <div class="col-8 mt-5 mx-auto">
      <h1>プロフィール編集</h1>
    </div>
  </div>
   <div class="row">
     <div class="col-8 mx-auto my-5">
       <%= form_with model: @member do |f| %>
         <h4>プロフィール画像</h4>
         <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>

         <h4>名前</h4>
         <%= f.text_field:name, class:"form-control" %>

         <h4>メールアドレス</h4>
         <%= f.text_field:email, class:"form-control" %>

         <h4>自己紹介</h4>
         <%= f.text_area:introduction, class:"form-control" %>

         <h4>プレースタイル</h4>
         <%= f.text_field:playstyle, class:"form-control" %>

         <h4>ゲーム内ランク</h4>
         <%= f.text_field:gamerank, class:"form-control" %>

         <h4>ボイスチャット</h4>
         <%= f.text_field:voicechat, class:"form-control" %>

         <h4>プレイ時間</h4>
         <%= f.text_field:playtime, class:"form-control" %>

         <h4>パスワード</h4>

         <%= f.submit '変更を保存' %>
       <% end %>
       <%= link_to "戻る", member_path(@member) %>
     </div>
   </div>
</div>