<h1>プロフィール編集</h1>

<%= form_with model: @member do |f| %>

<h4>名前</h4>
<%= f.text_field:name %>

<h4>メールアドレス</h4>
<%= f.text_field:email %>

<h4>性別</h4>
<%= f.text_field:gender %>

<h4>自己紹介</h4>
<%= f.text_area:introduction %>

<h4>プレースタイル</h4>
<%= f.text_field:playstyle %>

<h4>ゲーム内ランク</h4>
<%= f.text_field:gamerank %>

<h4>ボイスチャット</h4>
<%= f.text_field:voicechat %>

<h4>プレイ時間</h4>
<%= f.text_field:playtime %>

<%= f.submit '変更を保存' %>

<% end %>

<%= link_to "戻る", member_path(@member) %>
