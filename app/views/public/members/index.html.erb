<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h1>ユーザー一覧</h1>
    </div>
  </div>
  <!--検索フォーム-->
  <div class="row mt-5">
    <div class="col-10 mx-auto">
      <%= form_with url: search_members_path, local: true, method: :get  do |f| %>
      <div class="mb-3 row">
        <label class="col-sm-2 text-center mt-2 p-0 m-0">キーワード検索</label>
         <div class="col-6 ">
           <%= f.text_field :keyword, class: "form-control" %>
         </div>
         <div class="col-sm-2">
           <%= f.submit "検索", class: "btn btn-outline-secondary form-control" %>
         </div>
      </div>
      <% end %>
    </div>
  </div>

  <div class="col-10 mt-3 mx-auto border-top">
    <% @members.each do |member| %>
    <div class="card my-3">
      <div class="row">
        <div class="col-2">
          <%= image_tag member.get_profile_image(100,100), class: "my-3 mx-4 rounded-circle" %>
        </div>
        <div class="col-10">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to member_path(member) do %>
                <%= member.name %>
              <% end %>
            </h5>
              <p class="card-text">自己紹介：<%= member.introduction %></p>
              <p class="card-text">プレースタイル：<%= member.playstyle %></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>