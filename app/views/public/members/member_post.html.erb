<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2><%= @member.name %>さんの投稿一覧</h2>
    </div>
  </div>
  <div class="row mt-3">
    <div class="col-10 mx-auto">
      <% if @posts.exists? %>
      <% @posts.each do |post| %>
      <div class="card my-3">
        <div class="row">
          <div class="col-2">
            <div class="mt-3 ml-3"><%= image_tag post.member.get_profile_image(110,110), class: "ml-3 rounded-circle" %></div>

          </div>
          <div class="col-10">
            <div class="card-body">
              <p class="card-title"><strong><%= link_to post.title, post_path(post.id) %></strong></p>
              <p class="card-text"><%= post.category.name %></p>
              <p class="card-text"><%= post.body %></p>
              <p class="card-text text-right"><small class="text-muted">投稿日:<%= post.created_at.strftime('%Y/%m/%d') %></small></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <% else %>
    <p>投稿がありません</p>
  <% end %>
    </div>
  </div>
</div>