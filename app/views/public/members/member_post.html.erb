<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h2><i class="fas fa-list-alt mr-2"></i><%= @member.name %>さんの投稿一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mt-3 mx-auto">
      <% if @posts.exists? %>
        <%= render 'public/posts/index', posts: @posts %>
      <% else %>
        <p>投稿がありません</p>
      <% end %>
    </div>
  </div>
</div>