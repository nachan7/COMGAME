<div class="container">
  <div class="row">
    <div class="col-8 mt-5 mx-auto">
      <h1>マイページ</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mx-auto">
      <table class="table">
        <%= image_tag @member.get_profile_image(100,100),class:"m-3" %>
        <tbody>
          <tr>
            <th>名前</th>
            <td><%= @member.name %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td><%= @member.gender %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @member.introduction %></td>
          </tr>
          <tr>
            <th>プレースタイル</th>
            <td><%= @member.playstyle %></td>
          </tr>
          <tr>
            <th>ゲーム内ランク</th>
            <td><%= @member.gamerank %></td>
          </tr>
          <tr>
            <th>ボイスチャット</th>
            <td><%= @member.voicechat %></td>
          </tr>
          <tr>
            <th>プレイ時間</th>
            <td><%= @member.playtime %></td>
          </tr>
        </tbody>
      </table>
      <%= link_to "編集", edit_member_path(@member.id),class:"mt-1 mb-5" %>
    </div>
  </div>