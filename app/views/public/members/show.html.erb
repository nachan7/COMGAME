<%= flash[:notice] %>
<div class="container my-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <h2>マイページ</h2>
    </div>
  </div>
 <!--フォロー機能-->
  <div class="row">
    <div class="col-8 mt-3 mx-auto">
      <div class="row">
        <%= render "public/relationships/follow_function", member: @member %>
        <div class="col-sm-3 mt-5">
           <% if current_member != @member && current_member.following?(@member) && @member.following?(current_member) %>
             <%= link_to 'DMを送る', chat_path(@member.id), class: "btn btn-info m-0" %>
           <% end %>
        </div>
      </div>
    </div>
  </div>
　 <div class="row">
    <div class="col-8 mx-auto">
      <table class="table">
        <tbody>
          <tr>
            <th style="width:25%">名前</th>
            <td><%= @member.name %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td><%= @member.gender %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @member.introduction %></td>
          </tr>
          <tr>
            <th>プレースタイル</th>
            <td><%= @member.playstyle %></td>
          </tr>
          <tr>
            <th>ゲーム内ランク</th>
            <td><%= @member.gamerank %></td>
          </tr>
          <tr>
            <th>ボイスチャット</th>
            <td><%= @member.voicechat %></td>
          </tr>
          <tr>
            <th>プレイ時間</th>
            <td><%= @member.playtime %></td>
          </tr>
          <tr>
            <th></th>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <div class="col-8 mx-auto">
      <% if member_signed_in? %>
        <%= link_to "気になる投稿一覧", favorites_member_path(@member), class: "mr-3 btn btn-outline-info" %>
        <%= link_to "投稿一覧", member_post_member_path(@member), class: "mr-3 btn btn-outline-info" %>
      <% if @member == current_member %>
        <%= link_to "編集", edit_member_path(@member.id),class: "btn btn-success" %>
      <% end %>
      <% end %>
    </div>
  </div>
</div>


