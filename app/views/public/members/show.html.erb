<div class="container my-5">
  <div class="row">
    <div class="col-8 mx-auto">
      <h1>マイページ</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-8 mt-3 mx-auto">
      <!--プロフィール画像-->
      <%= image_tag @member.get_profile_image(100,100),class:"m-3 rounded-circle" %>
      <!--フォロー機能-->
      <% if current_member.following?(@member) %>
        <%= link_to "フォロー外す", member_relationships_path(@member.id), class: "btn btn-secondary", method: :delete %>
      <% else %>
        <%= link_to "フォローする", member_relationships_path(@member.id), class: "btn btn-outline-info", method: :post %>
      <% end %>

        <p><%= link_to  member_followings_path(@member.id) do %>フォロー<%= @member.followings.count %><% end %></p>
        <p><%= link_to  member_followers_path(@member.id) do %>フォロワー<%= @member.followers.count %><% end %></p>

      <table class="table">
        <tbody>
          <tr>
            <th style="width:25%">名前</th>
            <td><%= @member.name %></td>
          </tr>
          <tr>
            <th>性別</th>
            <td><%= @member.gender %></td>
          </tr>
          <tr>
            <th>自己紹介</th>
            <td><%= @member.introduction %></td>
          </tr>
          <tr>
            <th>プレースタイル</th>
            <td><%= @member.playstyle %></td>
          </tr>
          <tr>
            <th>ゲーム内ランク</th>
            <td><%= @member.gamerank %></td>
          </tr>
          <tr>
            <th>ボイスチャット</th>
            <td><%= @member.voicechat %></td>
          </tr>
          <tr>
            <th>プレイ時間</th>
            <td><%= @member.playtime %></td>
          </tr>
          <tr>
            <th></th>
            <td></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>


  <div class="row">
    <div class="col-8 mx-auto">
      <%= link_to "気になる投稿一覧", favorites_member_path(@member), class: "mr-3 btn btn-info" %>

      <%= link_to "編集", edit_member_path(@member.id),class: "btn btn-success" %>
    </div>
  </div>
</div>


