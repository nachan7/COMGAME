
  <h4>コメント一覧</h4>
  <%# byebug %>
  <p>コメント件数：<%= post.post_comments.count %></p>
  <% post.post_comments.each do |post_comment| %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-2">
        <%= link_to member_path(post_comment.member) do %>
          <%= image_tag post_comment.member.get_profile_image(100,100),class:"m-3 rounded-circle" %>
        <% end %>
      </div>
      <div class="col-md-10">
        <div class="card-body">
          <p class="card-text"><%= post_comment.member.name %></p>
          <p class="card-text"><%= post_comment.comment %></p>
          <p class="card-text text-right">
            <small class="text-muted"><%= post_comment.created_at.strftime('%Y/%m/%d') %></small>
              <% if post_comment.member == current_member %>
                <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment),class:"btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に削除しますか", remote: true %>
              <% end %>
          </p>
          </div>
        </div>
      </div>
    </div>
    <% end %>

    <!--コメントフォーム-->
    <% if member_signed_in? %>
      <%= form_with model:[post,post_comment], local: false do |f| %>
        <div class="form-group">
          <%= f.text_area :comment, class:"form-control", rows: '3', placeholder: "コメントを100字以内で入力してください" %>
        </div>
        <%= f.submit "送信する",class:"btn btn-primary" %>
      <% end %>
    <% end %>