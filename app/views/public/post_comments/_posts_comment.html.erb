<div class="col-10 mt-5 mx-auto">
  <h4>コメント一覧</h4>
  <p>コメント件数：<%= post.post_comments.count %></p>
  <% post.post_comments.each do |post_comment| %>
  <div class="card mb-3">
    <div class="row">
      <div class="col-3">
        <%= image_tag post_comment.member.get_profile_image(100,100),class:"m-3 rounded-circle" %>
      </div>
      <div class="col-9">
        <div class="card-body">
          <p class="card-text"><%= post_comment.member.name %></p>
          <p class="card-text"><small><%= post_comment.comment %></small></p>
          <p class="card-text text-right">
            <small class="text-muted"><%= post_comment.created_at.strftime('%Y/%m/%d') %></small>
              <% if post_comment.member == current_member %>
                <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment),class:"btn btn-sm btn-danger", method: :delete %>
              <% end %>
          </p>
          </div>
        </div>
      </div>
    </div>
    
    <% end %>
    <% if member_signed_in? %>
    <%= form_with model: [post, post_comment] do |f| %>
      <div class="form-group">
        <%= f.text_area :comment, class:"form-control", rows: '3', placeholder: "コメントをここに" %>
      </div>
      <%= f.submit "送信する",class:"btn btn-primary" %>
    <% end %>
    <% end %>
    
</div>