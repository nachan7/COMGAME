<div class="container my-5">
  <div class="row">
    <div class="col-8 offset-1">
      <h1>投稿一覧</p></h1>
    </div>
  </div>
　　<!--検索フォーム-->
    <div class="row">
      <div class="col-8 offset-1">
        <%= form_with url: search_posts_path, local: true, method: :get do |f| %>
        　<div class="mb-3 row ">
            <label class="col-sm-2 text-center mt-2 p-0 m-0">カテゴリー</label>
            <div class="col-6 ">
              <%= f.collection_select :category_id, Category.all, :id, :name, {}, class: "form-control" %>
            </div>
          </div>
      </div>
      <div class="col-10 mx-auto">
          <div class="mb-3 row">
            <div class="col-sm-7">
              <%= f.text_field :keyword, class: "form-control" %>
            </div>
            <div class="col-sm-2">
              <%= f.submit "検索", class: "btn btn-outline-secondary form-control" %>
            </div>
            <div class="col-sm-2 text-right offset-1">
              <%= link_to new_post_path, class: "btn btn-primary form-control" do %>
                <i class="fas fa-edit"></i> 新規投稿
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>


  <div class="row mt-3">
    <div class="col-10 mx-auto border-top">
      <% @posts.each do |post| %>
      <div class="card my-3">
        <div class="row">
          <div class="col-2">
            <div class="mt-3 ml-3"><%= image_tag post.member.get_profile_image(110,110), class: "ml-3 rounded-circle" %></div>

          </div>
          <div class="col-10">
            <div class="card-body">
              <p class="card-title"><strong><%= link_to post.title, post_path(post.id) %></strong></p>
              <p class="card-text"><%= post.category.name %></p>
              <p class="card-text"><%= post.body %></p>
              <p class="card-text text-right"><small class="text-muted">投稿日:<%= post.created_at.strftime('%Y/%m/%d') %></small></p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>