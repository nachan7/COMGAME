<div class="container">
  <div class="row">
    <div class="col-8 mt-5 mx-auto">
      <h1>投稿一覧</h1>
    </div>
    <%= link_to "新規投稿", new_post_path %>
  </div>
  <div class="col-8 mt-5 mx-auto">
    <% @posts.each do |post| %>
    <div class="card mb-3">
      <div class="row">
        <div class="col-4">
          <p>画像入れる</p>
        </div>
        <div class="col-8">
          <div class="card-body">
            <h5 class="card-title"><%= link_to post.title, post_path(post.id) %></h5>
              <p class="card-text"><%= post.body %></p>
              <p class="card-text"><small class="text-muted">最終更新3分前</small></p>
          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>