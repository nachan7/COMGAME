<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2><i class="fas fa-edit mr-2"></i>新規投稿</h2>
      <%= render 'layouts/error',obj: @post %>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mt-3 mx-auto">
      <%= form_with model: @post,url:'/posts', method: :post do |f| %>
        <div class="form-group">
          <%= f.label :タイトル %>
          <%= f.text_field :title, class: 'form-control book_title', placeholder: "タイトルを記載して下さい(50字以内)" %>
        </div>
        <div class="form-group">
          <%= f.label :カテゴリー %>
          <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: '選択してください' }, class: 'form-control' %>
        </div>
         <div class="form-group">
          <%= f.label :投稿内容 %>
          <%= f.text_area :body, class:"form-control", placeholder: "投稿内容の詳細を記載した下さい(400字以内)", rows: 8 %>
        </div>
         <%= f.submit '投稿', class:"mt-4 form-control btn btn btn-primary" %>
    <% end %>
    </div>
  </div>
</div>