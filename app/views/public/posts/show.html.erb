<%= flash[:notice] %>
<div class="container my-5">
  <div class="row">
    <div class="col-md-10 mx-auto">
      <h2><i class="fas fa-sticky-note mr-2"></i>投稿詳細</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 mx-auto">
      <table class="table mt-2 mb-3">
        <tbody>
          <tr>
            <th class="text-center" style="width:20%">タイトル</th>
            <td><%= @post.title %></td>
          </tr>
          <tr>
            <th class="text-center">名前</th>
            <td>
              <% if @post.member.is_deleted %>
                <%= @post.member.name %>（退会したユーザーです）
              <% else %>
                <%= link_to member_path(@post.member) do %>
                  <%= @post.member.name %>
                <% end %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th class="text-center">カテゴリー</th>
            <td><%= @post.category.name %></td>
          </tr>
          <tr>
            <th class="text-center">投稿内容</th>
            <td><%= @post.body %></td>
          </tr>
          <tr>
            <th>
              <div id="favorite_btn_<%= @post.id %>" class="text-center">
              <% if member_signed_in? %>
                <%= render "public/favorites/favorite", post: @post %>
              <% end %>
              </div>
            </th>
            <td class="text-right">
              <% if @post.member == current_member %>
                <%= link_to "編集", edit_post_path(@post.id),class:"btn btn-success ml-5 mr-2" %>
                <%= link_to "削除", @post, class: "btn btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
　　          <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-10 mt-5 mx-auto">
      <div id="comments-area">
        <%= render "public/post_comments/post_comment", post: @post, post_comment: @post_comment %>
      </div>
    </div>
  </div>
</div>