<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h3 id="room" data-room="<%= @room.id %>" data-member="<%= current_member.id %>">
      <i class="fas fa-comments mr-2"></i><%= @member.name %> さんとメッセージ</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mt-5 mx-auto">
      <div class="message">
        <% @chats.each do |chat| %>
          <% if chat.member_id == current_member.id %>
            <p style="text-align: right;"> <%= chat.member.name %>：<%= chat.message %></p>
          <% else %>
            <p style="text-align: left;"><%= chat.member.name %>：<%= chat.message %></p>
          <% end %>
        <% end %>
      </div>
      <div class="row">
        <div class="col-10 mt-5 mx-auto">
          <%= form_with model: @chat, data: {remote: true} do |f| %>
          <div class="row">
            <div class="col-sm-8">
              <%= f.text_field :message, class: "form-control" %>
              <%= f.hidden_field :room_id %>
            </div>
            <div class="col-sm-4">
              <%= f.submit '送信', class: "btn btn-outline-primary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>