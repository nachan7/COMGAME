<div class="container my-5">
  <div class="row">
    <div class="col-10 mx-auto">
      <h3 id="room" data-room="<%= @room.id %>" data-member="<%= current_member.id %>">
      <i class="fas fa-comments mr-2"></i><%= @member.name %> さんとメッセージ</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-10 mt-5 mx-auto">
      <div class="message">
　      <% @chats.each do |chat| %>
          <% if chat.member_id == current_member.id %>
            <div class="mycomment">
              <p><%= chat.message %></p>
            </div>
          <% else %>
            <div class="balloon6">
              <div class="faceicon">
                <%= image_tag chat.member.get_profile_image(50,50) %>
              </div>
              <div class="chatting">
                <div class="says">
                  <p><%= chat.message %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
      <div class="row">
        <div class="col-10 mt-5 mx-auto">
          <%= form_with model: @chat, data: {remote: true} do |f| %>
          <div class="row">
            <div class="col-sm-9">
              <%= f.text_field :message, class: "form-control" %>
              <%= f.hidden_field :room_id %>
            </div>
            <div class="col-sm-3">
              <%= f.submit '送信', class: "btn btn-outline-primary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>