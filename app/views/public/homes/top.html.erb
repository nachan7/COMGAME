<%= flash[:alert] %>
  <div style="position: relative; display:inline-block;">
     <%= image_tag 'top.jpg',class: "img-fluid max-width: 100%; , height: auto;" %>
    <div class="cover-text text-center" style="position: absolute; top: 100px; left: 230px; max-width: 100%; max-height: 100%; padding: 30px; text-align; color:#fff;">
      <h1 class="display-3 pb-3">Welcome to COMGAME</h1>
      <h3>あなただけの充実したGAMELIFEを</h3>
     </div>
  </div>

  <div class="container my-5">
    <!--最新４件の投稿-->
    <div class="row mt-5">
      <div class="col-9 mx-auto">
        <h3><i class="fa-regular fa-file-lines mr-2"></i>最新の投稿</h3>
      </div>
    </div>
        <div class="row mb-3">
          <div class="col-9 mx-auto">
            <% @posts.first(4).each do |post| %>
            <div class="card my-3">
              <div class="row">
                <div class="col-2">
                  <div class="mt-3 ml-3"><%= image_tag post.member.get_profile_image(110,110), class: "ml-3 rounded-circle" %></div>
                </div>
                <div class="col-10">
                  <div class="card-body">
                    <p class="card-title"><strong><%= link_to post.title, post_path(post.id) %></strong></p>
                    <p class="card-text"><%= post.category.name %></p>
                    <p class="card-text"><%= post.body %></p>
                    <p class="card-text text-right"><small class="text-muted">投稿日:<%= post.created_at.strftime('%Y/%m/%d') %></small></p>
                  </div>
                </div>
              </div>
            </div>
            <% end %>
            
            <div class="text-right">
            <%= link_to posts_path,  class: "text-decoration-none text-dark font-weight-bold" do %>
              全ての投稿を見る<i class="fa-solid fa-right-to-bracket"></i>
            <% end %>
            </div>
          </div>
        </div>
        <!--最新４人の会員-->
        <div class="row mt-5">
          <div class="col-9 mx-auto">
            <h3><i class="fas fa-user-plus mr-2"></i>最新の登録者</h3>
          </div>
        </div>
        <div class="row mb-3">
          <div class="col-9 mx-auto">
            <% @members.first(4).each do |member| %>
            <div class="card my-3">
              <div class="row">
                <div class="col-2">
                  <%= image_tag member.get_profile_image(100,100), class: "my-3 mx-4 rounded-circle" %>
                </div>
                <div class="col-10">
                  <div class="card-body">
                    <h5 class="card-title">
                      <%= link_to member_path(member) do %>
                        <%= member.name %>
                    <% end %>
                    </h5>
                    <p class="card-text">自己紹介：<%= member.introduction %></p>
                    <p class="card-text">プレースタイル：<%= member.playstyle %></p>
                  </div>
                </div>
              </div>
            </div>
            <% end %>

            <div class="text-right">
            <%= link_to members_path,  class: "text-decoration-none text-dark font-weight-bold" do %>
              全てのユーザーを見る<i class="fa-solid fa-right-to-bracket"></i>
            <% end %>
            </div>
          </div>
        </div>
      </div>