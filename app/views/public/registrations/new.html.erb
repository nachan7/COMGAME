<%= flash[:notice] %>
<div class="container my-5">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2 class="text-center"><i class="fas fa-user-plus mr-2"></i>新規登録</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

　　　  <div class="field">
          <%= f.label :名前 %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name",class: "form-control" %>
        </div>

        <div class="field mt-1">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class: "form-control" %>
        </div>

        <div class="field mt-1">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
            （<%= @minimum_password_length %> 文字以上）
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password",class: "form-control" %>
        </div>

        <div class="field mt-1">
          <%= f.label :パスワード（確認用） %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-control" %>
        </div>

        <div class="actions mt-3">
          <%= f.submit "新規登録", class: "form-control btn btn-primary" %>
        </div>
      <% end %>
　　　<div>
        <p class="text-center">アカウントをお持ちの方はこちらから<%= render "public/shared/links" %>して下さい</p>
      </div>
    </div>
  </div>
</div>